{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "baseUrl": "./app",
    "paths": {
      "store": ["./redux-store"],
      "assets": ["./assets"],
      "components": ["./components"],
      "i18n": ["./i18n"],
      "models": ["./models"],
      "navigation": ["./navigation"],
      "screens": ["./screens"],
      "services": ["./services"],
      "theme": ["./theme"],
      "utils": ["./utils"],
      "types": ["./types"],
      "hooks": ["./hooks"],
      "storybook": ["./storybook"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["App.tsx", "app", "tests", "storybook"]
}
